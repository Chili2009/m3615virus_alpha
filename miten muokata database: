ALTER TABLE `event` RENAME TO `events`;

ALTER TABLE events DROP PRIMARY KEY;

ALTER TABLE events ADD COLUMN id INT AUTO_INCREMENT PRIMARY KEY;

ALTER TABLE events ADD COLUMN name VARCHAR(255) NOT NULL, ADD COLUMN choices JSON, ADD COLUMN outcomes JSON, ADD COLUMN health_impact JSON;

ALTER TABLE events DROP COLUMN event_id;

ALTER TABLE tasks ADD COLUMN name VARCHAR(255) NOT NULL, ADD COLUMN choices JSON NOT NULL, ADD COLUMN outcomes JSON NOT NULL;

ALTER TABLE tasks MODIFY COLUMN tasks_id INT(11) AUTO_INCREMENT;

ALTER TABLE tasks MODIFY COLUMN reward_health INT(1) DEFAULT 0, MODIFY COLUMN penalty_health INT(1) DEFAULT 0;

ALTER TABLE tasks MODIFY COLUMN choices LONGTEXT;

