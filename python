        previous_tasks.append(random_task)
        result = tasks[random_task]()
        # sql = "SELECT * FROM tasks WHERE id = random_task"
        # cursor = conn.cursor(dictionary=True)
        # cursor.execute(sql)
        # task = cursor.fetchall()
        return result


